        </div>       
      </div>        
      <div class="col-3 right">
        <div class="aside"> 
          <div class="smsBox">

            <% for(var i = 0; i < listMessages.length; i++){ %>
               <h2>message <%=i+1 %></h2>
               <h3><span><%= moment(listMessages[i].dateTime).format("MMM Do YYYY")%></h3>
               <h3><%- listMessages[i].message %></h3>
            <%}%>
            <form  action= "/sms" method="POST" >
              <div class="message">           
                <textarea type="textarea"  rows="4" name="message" ></textarea>
              </div>         
              <div class="submit">
                <input type="submit" value="Send">
              </div>
            </form>
          </div>
          <div class="phone">                        
            <span>Phone:<input type=tel size=3 value="1646-765-8666">
            <button type="button" onclick="alert('change Phone Number')">Update phone</button>
            </span>               
